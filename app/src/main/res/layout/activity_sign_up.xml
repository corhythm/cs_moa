<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SignUpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_signUp_appImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/img_all_myface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_signUp_startDivider"
            android:layout_width="130dp"
            android:layout_height="1dp"
            android:background="#bdbdbd"
            app:layout_constraintBottom_toBottomOf="@id/imageView_signUp_appImage"
            app:layout_constraintEnd_toStartOf="@id/imageView_signUp_appImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageView_signUp_appImage" />

        <View
            android:id="@+id/view_signUp_endDivider"
            android:layout_width="130dp"
            android:layout_height="1dp"
            android:background="#bdbdbd"
            app:layout_constraintBottom_toBottomOf="@id/imageView_signUp_appImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView_signUp_appImage"
            app:layout_constraintTop_toTopOf="@id/imageView_signUp_appImage" />

        <TextView
            android:id="@+id/textView_signUp_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nunitosans_black"
            android:text="안녕하세요 :)"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/view_signUp_startDivider"
            app:layout_constraintTop_toBottomOf="@id/imageView_signUp_appImage" />

        <TextView
            android:id="@+id/textView_signUp_nicknameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/jetbrainsmono_bold"
            android:text="닉네임"
            android:layout_marginTop="40dp"
            android:textColor="#bdbdbd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_signUp_welcome" />

        <EditText
            android:id="@+id/editText_signUp_nicknameInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/nunitosans_black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintStart_toStartOf="@id/textView_signUp_nicknameLabel"
            app:layout_constraintTop_toBottomOf="@id/textView_signUp_nicknameLabel"
            app:layout_constraintWidth_percent="0.8"
            android:drawableEnd="@drawable/ic_all_checked"/>

        <TextView
            android:id="@+id/textView_signUp_emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/jetbrainsmono_bold"
            android:text="이메일"
            android:layout_marginTop="40dp"
            android:textColor="#bdbdbd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_signUp_nicknameInput" />

        <EditText
            android:id="@+id/editText_signUp_emailInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/nunitosans_black"
            app:layout_constraintStart_toStartOf="@id/textView_signUp_emailLabel"
            app:layout_constraintTop_toBottomOf="@id/textView_signUp_emailLabel"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/textView_signUp_passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/jetbrainsmono_bold"
            android:text="비밀번호"
            android:layout_marginTop="40dp"
            android:textColor="#bdbdbd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_signUp_emailInput" />

        <EditText
            android:id="@+id/editText_signUp_passwordInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/nunitosans_black"
            app:layout_constraintStart_toStartOf="@id/textView_signUp_passwordLabel"
            app:layout_constraintTop_toBottomOf="@id/textView_signUp_passwordLabel"
            app:layout_constraintWidth_percent="0.8"
            android:drawableEnd="@drawable/ic_signinup_showpassword"/>

        <TextView
            android:id="@+id/textView_signUp_confirmPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/jetbrainsmono_bold"
            android:text="비밀번호 확인"
            android:layout_marginTop="40dp"
            android:textColor="#bdbdbd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_signUp_passwordInput" />

        <EditText
            android:id="@+id/editText_signUp_confirmPasswordInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/nunitosans_black"
            android:drawableEnd="@drawable/ic_all_checked"
            app:layout_constraintStart_toStartOf="@id/textView_signUp_confirmPasswordLabel"
            app:layout_constraintTop_toBottomOf="@id/textView_signUp_confirmPasswordLabel"
            app:layout_constraintWidth_percent="0.8" />

        <Button
            android:id="@+id/button_signUp_signUp"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="@id/editText_signUp_confirmPasswordInput"
            app:layout_constraintEnd_toEndOf="@id/editText_signUp_confirmPasswordInput"
            app:layout_constraintTop_toBottomOf="@id/editText_signUp_confirmPasswordInput"
            app:layout_constraintWidth_percent="0.7"
            android:layout_marginTop="20dp"
            android:text="회원가입"
            android:fontFamily="@font/nunitosans_black"
            android:textSize="20dp"
            android:backgroundTint="#303030"/>

        <TextView
            android:id="@+id/textView_signUp_signIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/button_signUp_signUp"
            app:layout_constraintEnd_toEndOf="@+id/button_signUp_signUp"
            app:layout_constraintTop_toBottomOf="@id/button_signUp_signUp"
            app:layout_constraintWidth_percent="0.7"
            android:text="이미 계정이 있으신가요? 로그인"
            android:textSize="15dp"
            android:fontFamily="@font/nunitosans_black"
            android:gravity="center"
            android:layout_marginTop="10dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>