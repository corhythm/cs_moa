<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/view_itemEventItemList_divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:background="#F0F2F3"/>

    <TextView
        android:id="@+id/textView_itemEventItemList_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="골라먹는 간편식!"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/view_itemEventItemList_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_marginTop="30dp"
        android:textSize="30dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_all_mart"
        app:layout_constraintTop_toTopOf="@id/textView_itemEventItemList_title"
        app:layout_constraintBottom_toBottomOf="@id/textView_itemEventItemList_title"
        app:layout_constraintStart_toEndOf="@id/textView_itemEventItemList_title"
        android:layout_marginStart="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_itemEventItemList_eventItemList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_itemEventItemList_title" />

    <ProgressBar
        android:id="@+id/progressBar_itemEventItemList_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerView_itemEventItemList_eventItemList"/>


</androidx.constraintlayout.widget.ConstraintLayout>