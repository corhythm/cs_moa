<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/cardView_bestReview_itemImageContainer"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginStart="5dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#E3DADA"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/imageView_bestReview_itemImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/img_review_item1" />
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    <TextView
        android:id="@+id/textView_bestReview_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/maple_story_bold"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@id/cardView_bestReview_itemImageContainer"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CJ)Big스팸김치덮밥(컵반)" />

    <ImageView
        android:id="@+id/imageView_bestReview_ratingImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_all_filled_star"
        app:layout_constraintStart_toStartOf="@id/imageView_bestReview_commentNumImage"
        app:layout_constraintTop_toBottomOf="@id/imageView_bestReview_commentNumImage" />

    <TextView
        android:id="@+id/textView_bestReview_rating"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="3dp"
        android:gravity="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView_bestReview_ratingImage"
        app:layout_constraintStart_toEndOf="@id/imageView_bestReview_ratingImage"
        app:layout_constraintTop_toTopOf="@id/imageView_bestReview_ratingImage"
        tools:text="4.5" />

    <ImageView
        android:id="@+id/imageView_bestReview_commentNumImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_all_review"
        app:layout_constraintStart_toEndOf="@id/cardView_bestReview_itemImageContainer"
        app:layout_constraintTop_toBottomOf="@id/textView_bestReview_title" />

    <TextView
        android:id="@+id/textView_bestReview_commentNum"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="2dp"
        android:gravity="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView_bestReview_commentNumImage"
        app:layout_constraintStart_toEndOf="@id/imageView_bestReview_commentNumImage"
        app:layout_constraintTop_toTopOf="@id/imageView_bestReview_commentNumImage"
        tools:text="101" />

    <ImageView
        android:id="@+id/imageView_bestReview_likeNumImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_all_filledheart"
        app:layout_constraintBottom_toBottomOf="@id/imageView_bestReview_commentNumImage"
        app:layout_constraintStart_toEndOf="@id/textView_bestReview_commentNum"
        app:layout_constraintTop_toTopOf="@id/imageView_bestReview_commentNumImage" />

    <TextView
        android:id="@+id/textView_bestReview_likeNum"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:text="120"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView_bestReview_likeNumImage"
        app:layout_constraintStart_toEndOf="@id/imageView_bestReview_likeNumImage"
        app:layout_constraintTop_toTopOf="@id/imageView_bestReview_likeNumImage" />

    <ImageView
        android:id="@+id/imageView_bestReview_viewImage"
        android:layout_width="20dp"
        android:layout_height="17dp"
        android:src="@drawable/ic_all_eye"
        android:layout_marginStart="5dp "
        app:layout_constraintBottom_toBottomOf="@id/imageView_bestReview_ratingImage"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@id/textView_bestReview_rating"
        app:layout_constraintTop_toTopOf="@id/imageView_bestReview_ratingImage" />

    <TextView
        android:id="@+id/textView_bestReview_viewNum"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="2dp"
        android:gravity="center"
        android:text="111"
        app:layout_constraintBottom_toBottomOf="@id/imageView_bestReview_viewImage"
        app:layout_constraintStart_toEndOf="@id/imageView_bestReview_viewImage"
        app:layout_constraintTop_toTopOf="@id/imageView_bestReview_viewImage" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/cardView_bestReview_csBrandContainer"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="@id/textView_bestReview_price"
        app:layout_constraintStart_toEndOf="@id/textView_bestReview_price"
        app:strokeColor="#F3F813"
        app:strokeWidth="1.5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_bestReview_csBrand"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/img_cs_emart24"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_bestReview_csBrandEtc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/maple_story_light"
                android:gravity="center"
                android:text="기타"
                android:textColor="#EF0C76"
                android:textSize="18dp"
                android:visibility="invisible" />
        </FrameLayout>
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    <TextView
        android:id="@+id/textView_bestReview_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baemin_hanna_air"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/imageView_bestReview_ratingImage"
        app:layout_constraintTop_toBottomOf="@id/imageView_bestReview_ratingImage"
        app:layout_constraintVertical_bias="0.2"
        tools:text="4,500원" />
</androidx.constraintlayout.widget.ConstraintLayout>